<views:WindowBase x:Class="SerialPortUtility.Views.KeyMappingWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:views="clr-namespace:SerialPortUtility.Views"
                  Title="Key Mapping" Height="326" Width="304">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <DataGrid HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Width="50" />
                <DataGridTextColumn Header="Translates to" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Save" IsDefault="True" HorizontalAlignment="Right" Margin="0,0,99,10"
                VerticalAlignment="Bottom" Width="75" Grid.Row="1" Height="20" />
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Right" Margin="0,0,10,10"
                VerticalAlignment="Bottom" Width="75" Grid.Row="1" Height="20" />
    </Grid>
</views:WindowBase>